      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :capacity, :class => 'control-label'
    .controls
      = f.text_field :capacity, :class => 'text_field'
  .control-group
    = f.label :place, :class => 'control-label'
    .controls
      = f.text_field :place, :class => 'text_field'
  .control-group
    = f.label :start_at, :class => 'control-label'
    .controls
      = f.text_field :start_at, :class => 'text_field'
  .control-group
    = f.label :finish_at, :class => 'control-label'
    .controls
      = f.text_field :finish_at, :class => 'text_field'
  .control-group
    = f.label :deleted_at, :class => 'control-label'
