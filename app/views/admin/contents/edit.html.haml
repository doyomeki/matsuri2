= form_for ['admin', @event, @event.contents.find(params[:id])], multipart: true, html: { class: 'form-horizontal' } do |f|
  = render :partial => "form", :locals => {:f => f}
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")),admin_event_content_path(event_id: @event.id), :class => 'btn'
