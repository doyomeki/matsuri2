- model_class = Content
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:event_id)
      %th= model_class.human_attribute_name(:booth_id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:description)
      %th= model_class.human_attribute_name(:start_at)
      %th= model_class.human_attribute_name(:finish_at)
      %th= model_class.human_attribute_name(:speaker_name)
      %th= model_class.human_attribute_name(:speaker_profile)
      %th= model_class.human_attribute_name(:speaker_image)
      %th= model_class.human_attribute_name(:deleted_at)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @contents.each do |content|
      %tr
        %td= link_to content.id, content_path(content)
        %td= content.event_id
        %td= content.booth_id
        %td= content.title
        %td= content.description
        %td= content.start_at
        %td= content.finish_at
        %td= content.speaker_name
        %td= content.speaker_profile
        %td= content.speaker_image
        %td= content.deleted_at
        %td=l content.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_content_path(content), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), content_path(content), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_content_path, :class => 'btn btn-primary'
