= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :capacity
    = f.number_field :capacity
  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :start_datetime
    = f.datetime_select :start_datetime
  .field
    = f.label :end_datetime
    = f.datetime_select :end_datetime
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .actions
    = f.submit 'Save'
