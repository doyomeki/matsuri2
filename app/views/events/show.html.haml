- model_class = Event
- @contents.each do |content|
  = link_to content.title, event_contents_path(event_id: @event.id)

.page-header
  %h1= @event.title
%p.description= @event.description
%ul.event-info
  %li
    開催:
    = l @event.start_at, format: :date
    = l @event.start_at, format: :time
    = "〜"
    = l @event.finish_at, format: :time
  %li
    会場：
    = @event.place
  %li
    定員：
    = @event.capacity

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), events_path, :class => 'btn'
