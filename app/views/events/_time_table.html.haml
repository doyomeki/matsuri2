%div.container
  - @times.each do |time|
    %div.row-fluid
      %div.span12
        %h2.timezone
          %i.icon-time
          = l time.start_at
          ï½ž
          = l time.finish_at
    %div.row-fluid
      - @event.contents.find_all_by_start_at(time.start_at).each do |content|
        %div.span6
          %h3.boothname
            = content.booth.name
          %div.row-fluid.content
            %div.span6
              = image_tag(content.speaker_image.url)
            %div.span6
              %h4
                = link_to content.title, event_contents_path(anchor: content.id,event_id: @event.id)
              = content.speaker_name
