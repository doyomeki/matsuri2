.form-actions
  = t("messages.login")

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .control-group
    = f.label :code
    .controls
      = f.text_field :code

  .control-group
    = f.label :password
    .controls
      = f.password_field :password

  .control-group
    - if devise_mapping.rememberable?
      = f.check_box :remember_me
      = f.label :remember_me

  .form-actions
    = f.submit t("helpers.links.login"), class: "btn"

= render "users/shared/links"
