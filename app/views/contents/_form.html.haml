= form_for @content do |f|
  - if @content.errors.any?
    #error_explanation
      %h2= "#{pluralize(@content.errors.count, "error")} prohibited this content from being saved:"
      %ul
        - @content.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :event_id
    = f.number_field :event_id
  .field
    = f.label :room_id
    = f.number_field :room_id
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :start_at
    = f.datetime_select :start_at
  .field
    = f.label :finish_at
    = f.datetime_select :finish_at
  .field
    = f.label :speaker_name
    = f.text_field :speaker_name
  .field
    = f.label :speaker_profile
    = f.text_field :speaker_profile
  .field
    = f.label :speaker_image
    = f.text_field :speaker_image
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .actions
    = f.submit 'Save'
