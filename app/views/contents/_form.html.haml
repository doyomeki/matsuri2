= form_for @content, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :event_id, :class => 'control-label'
    .controls
      = f.text_field :event_id, :class => 'text_field'
  .control-group
    = f.label :room_id, :class => 'control-label'
    .controls
      = f.text_field :room_id, :class => 'text_field'
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .control-group
    = f.label :start_at, :class => 'control-label'
    .controls
      = f.text_field :start_at, :class => 'text_field'
  .control-group
    = f.label :finish_at, :class => 'control-label'
    .controls
      = f.text_field :finish_at, :class => 'text_field'
  .control-group
    = f.label :speaker_name, :class => 'control-label'
    .controls
      = f.text_field :speaker_name, :class => 'text_field'
  .control-group
    = f.label :speaker_profile, :class => 'control-label'
    .controls
      = f.text_field :speaker_profile, :class => 'text_field'
  .control-group
    = f.label :speaker_image, :class => 'control-label'
    .controls
      = f.text_field :speaker_image, :class => 'text_field'
  .control-group
    = f.label :deleted_at, :class => 'control-label'
    .controls
      = f.text_field :deleted_at, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), contents_path, :class => 'btn'
